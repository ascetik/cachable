<?xml version="1.0"?>
<phpunit
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/10.1/phpunit.xsd"
    bootstrap="vendor/autoload.php"
    colors="true"
    testdox="true"
>
    <testsuites>
        <testsuite name="Storage Tests">
            <!-- <directory>tests</directory> -->
            <file>tests/CacheableClosureTest.php</file>
            <file>tests/CacheableInvokableTest.php</file>
            <file>tests/CacheableMethodTest.php</file>
            <file>tests/CacheableStaticTest.php</file>
            <file>tests/CacheableCustomPropertyTest.php</file>
            <file>tests/CacheableCallablePropertyTest.php</file>
            <file>tests/CacheableObjectPropertyTest.php</file>
            <file>tests/CacheablePropertyRegistryTest.php</file>
            <file>tests/CacheableInstanceTest.php</file>
            <file>tests/CacheableFactoryTest.php</file>
        </testsuite>
    </testsuites>
    <php>
        <ini name="display_errors" value="On" />
        <ini name="display_startup_errors" value="On" />
    </php>
</phpunit>
